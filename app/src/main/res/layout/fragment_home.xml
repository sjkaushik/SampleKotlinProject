<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.fragment.home.HomeFragment">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.kotlin.camp.ui.fragment.home.HomeViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@+id/poster"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/dashboard_poster" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:gravity="center"
                android:onClick="@{()->viewModel.onShowCountryScreen()}"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="@{viewModel.countryName}"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    tools:text="select Country" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    app:srcCompat="@drawable/expand" />


            </LinearLayout>

        </FrameLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/covidTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:visibility="@{viewModel.showTitle?View.VISIBLE:View.GONE,default= gone}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/poster">


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/date"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:maxLines="1"
                android:text="@string/date"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="helllo" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/cases"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:maxLines="1"
                android:text="@string/c"
                android:textColor="@color/red"
                app:layout_constraintStart_toEndOf="@+id/date"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="300" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/active"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:maxLines="1"
                android:text="@string/a"
                android:textColor="@color/blue"
                app:layout_constraintStart_toEndOf="@+id/cases"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="120" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/recovered"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:maxLines="1"
                android:text="@string/r"
                android:textColor="@color/green"
                app:layout_constraintStart_toEndOf="@+id/active"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="120" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/death"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:maxLines="1"
                android:text="@string/d"
                android:textColor="@color/blue"
                app:layout_constraintStart_toEndOf="@+id/recovered"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="D" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/covidList"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/covidTitle"
            tools:layout_editor_absoluteX="0dp" />

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="@{viewModel.isLoading?View.VISIBLE:View.GONE}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>